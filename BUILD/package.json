{
  "name": "edward-silva-resume",
  "version": "1.0.0",
  "description": "Resume management system for Edward Silva's portfolio",
  "main": "build-resume.js",
  "scripts": {
    "setup": "node setup.js",
    "build": "node build-resume.js && node build-site.js",
    "build:resume": "node build-resume.js",
    "build:site": "node build-site.js",
    "watch": "nodemon --watch ../resume-data.json --exec 'npm run build'",
    "watch:resume": "nodemon --watch ../resume-data.json --exec 'npm run build:resume'",
    "watch:site": "nodemon --watch ../resume-data.json --exec 'npm run build:site'",
    "dev": "npm run build && npm run watch",
    "clean": "rm -rf ../resume/pdf/*.pdf ../resume/tex/*.tex",
    "compile": "npm run build:resume && cd ../resume/tex && pdflatex -output-directory=../pdf Edward_Silva_Resume.tex && pdflatex -output-directory=../pdf Edward_Silva_Resume.tex"
  },
  "keywords": [
    "resume",
    "latex",
    "portfolio",
    "automation"
  ],
  "author": "Edward Silva",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edwardasilva/easilva.com"
  }
}