#!/usr/bin/env bash

# Resume & Website Builder
# Builds the complete resume and website system

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
NC='\033[0m'

# Error handler
error_handler() {
    echo -e "${RED}Error: $1${NC}" >&2
    exit 1
}

# Log messages with colors
log() {
    local level="$1"
    local message="$2"
    local timestamp="$(date '+%H:%M:%S')"
    
    case "$level" in
        "info")
            echo -e "${BLUE}[${timestamp}] ${message}${NC}"
            ;;
        "success")
            echo -e "${GREEN}[${timestamp}] ${message}${NC}"
            ;;
        "warning")
            echo -e "${YELLOW}[${timestamp}] ${message}${NC}"
            ;;
        "error")
            echo -e "${RED}[${timestamp}] ${message}${NC}"
            ;;
        "step")
            echo -e "${PURPLE}[${timestamp}] ${message}${NC}"
            ;;
        "clean")
            echo -e "${CYAN}[${timestamp}] ${message}${NC}"
            ;;
        *)
            echo -e "${WHITE}[${timestamp}] ${message}${NC}"
            ;;
    esac
}

# Print header
echo -e "${PURPLE}================================================${NC}"
echo -e "${PURPLE}          Resume & Website Builder          ${NC}"
echo -e "${PURPLE}================================================${NC}"
echo

# Check we're in the right directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"
log "info" "Starting build in: $SCRIPT_DIR"

# Check BUILD directory exists
if [[ ! -d "BUILD" ]]; then
    error_handler "BUILD directory not found"
fi

# Check required files
log "step" "Checking requirements..."
if [[ ! -f "resume-data.json" ]]; then
    error_handler "resume-data.json not found"
fi

if [[ ! -f "BUILD/package.json" ]]; then
    error_handler "BUILD/package.json not found"
fi

# Install dependencies if needed
log "step" "Checking dependencies..."
cd BUILD
if [[ ! -d "node_modules" ]]; then
    log "info" "Installing dependencies..."
    if ! npm install >/dev/null 2>&1; then
        error_handler "Failed to install dependencies"
    fi
    log "success" "Dependencies installed"
fi

# Build resume
log "step" "Building resume..."
if ! npm run build:resume >/dev/null 2>&1; then
    error_handler "Resume build failed"
fi
log "success" "Resume and README generated"

# Build website
log "step" "Building website..."
if ! npm run build:site >/dev/null 2>&1; then
    error_handler "Website build failed"
fi
log "success" "Website generated"

cd "$SCRIPT_DIR"
log "success" "All builds completed"

# Compile PDF if LaTeX available
log "step" "Compiling Resume PDFs..."
cd resume/tex
if command -v pdflatex >/dev/null 2>&1; then
    # Array of all resume files to compile
    resume_files=("Edward_Silva_Resume.tex" "Edward_Silva_Resume_P.tex" "Edward_Silva_Resume_MS.tex" "Edward_Silva_Resume_MSP.tex")
    
    for tex_file in "${resume_files[@]}"; do
        if [[ -f "$tex_file" ]]; then
            log "info" "Running pdflatex (first pass) for $tex_file..."
            if pdflatex -interaction=nonstopmode -output-directory=../pdf "$tex_file" >/dev/null 2>&1; then
                sleep 1
                log "info" "Running pdflatex (second pass) for $tex_file..."
                if pdflatex -interaction=nonstopmode -output-directory=../pdf "$tex_file" >/dev/null 2>&1; then
                    sleep 1
                    log "success" "PDF for $tex_file generated successfully"
                else
                    log "warning" "Second PDF pass for $tex_file failed"
                fi
            else
                log "warning" "PDF compilation for $tex_file failed"
            fi
        else
            log "warning" "$tex_file not found, skipping"
        fi
    done
else
    log "warning" "pdflatex not found, skipping PDF"
fi
cd "$SCRIPT_DIR"

sleep 1

# Clean up auxiliary files
log "clean" "Cleaning up..."
files_cleaned=0

# Clean auxiliary files for all resume variations from pdf directory
for base_name in "Edward_Silva_Resume" "Edward_Silva_Resume_P" "Edward_Silva_Resume_MS" "Edward_Silva_Resume_MSP"; do
    if rm -f "resume/pdf/${base_name}.aux" 2>/dev/null; then
        files_cleaned=$((files_cleaned + 1))
    fi
    if rm -f "resume/pdf/${base_name}.log" 2>/dev/null; then
        files_cleaned=$((files_cleaned + 1))
    fi
    if rm -f "resume/pdf/${base_name}.out" 2>/dev/null; then
        files_cleaned=$((files_cleaned + 1))
    fi
    if rm -f "resume/pdf/${base_name}.synctex.gz" 2>/dev/null; then
        files_cleaned=$((files_cleaned + 1))
    fi
    
    # Also clean from resume root in case pdflatex put them there
    if rm -f "resume/${base_name}.aux" 2>/dev/null; then
        files_cleaned=$((files_cleaned + 1))
    fi
    if rm -f "resume/${base_name}.log" 2>/dev/null; then
        files_cleaned=$((files_cleaned + 1))
    fi
    if rm -f "resume/${base_name}.out" 2>/dev/null; then
        files_cleaned=$((files_cleaned + 1))
    fi
    if rm -f "resume/${base_name}.synctex.gz" 2>/dev/null; then
        files_cleaned=$((files_cleaned + 1))
    fi
    
    # Move any PDFs that ended up in resume root to pdf folder
    if [[ -f "resume/${base_name}.pdf" ]]; then
        mv "resume/${base_name}.pdf" "resume/pdf/${base_name}.pdf" 2>/dev/null
        log "info" "Moved ${base_name}.pdf to pdf folder"
    fi
done

log "success" "Build complete! Cleaned $files_cleaned files."

# Print summary
echo
log "info" "Build Summary:"
log "info" "✓ LaTeX Resume (BS): resume/tex/Edward_Silva_Resume.tex"
log "info" "✓ LaTeX Resume (BS+Profile): resume/tex/Edward_Silva_Resume_P.tex"
log "info" "✓ LaTeX Resume (MS+BS): resume/tex/Edward_Silva_Resume_MS.tex"
log "info" "✓ LaTeX Resume (MS+BS+Profile): resume/tex/Edward_Silva_Resume_MSP.tex"
log "info" "✓ PDF Resumes: resume/pdf/*.pdf"
log "info" "✓ Website: index.html"
log "info" "✓ Documentation: README.md"

echo
echo -e "${GREEN}================================================${NC}"
echo -e "${GREEN}               Build Complete!                  ${NC}"
echo -e "${GREEN}================================================${NC}"
